<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.edu.uea.buri.screens.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/go_to_userRegisterFragment"
            app:destination="@id/userRegisterFragment" />
        <action
            android:id="@+id/go_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userRegisterFragment"
        android:name="br.edu.uea.buri.screens.register.UserRegisterFragment"
        android:label="UserRegisterFragment"
        tools:layout="@layout/fragment_user_register">
        <action
            android:id="@+id/go_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="br.edu.uea.buri.screens.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/go_to_equipmentInfoFragment"
            app:destination="@id/equipmentInfoFragment" />
        <action
            android:id="@+id/go_to_equipmentRegisterFragment"
            app:destination="@id/equipmentRegisterFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/equipmentInfoFragment"
        android:name="br.edu.uea.buri.screens.equipment.info.EquipmentInfoFragment"
        android:label="EquipmentInfoFragment"
        tools:layout="@layout/fragment_equipment_info">
        <argument
            android:name="equipment"
            app:argType="br.edu.uea.buri.domain.equipment.Equipment" />
    </fragment>
    <fragment
        android:id="@+id/equipmentRegisterFragment"
        android:name="br.edu.uea.buri.screens.equipment.register.EquipmentRegisterFragment"
        android:label="EquipmentRegisterFragment"
        tools:layout="@layout/fragment_equipment_register" />
</navigation>